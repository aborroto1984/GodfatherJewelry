@page "/"

@using Microsoft.JSInterop

<div class="landing-container">
    <button class="lang-toggle" @onclick="ToggleLanguage"><i class="bi bi-globe"></i> @currentLanguageLabel</button>

    <div class="logo-mask fade-in"></div>

    <h1 class="tagline">@Translate("Where Timeless Elegance Meets Craftsmanship")</h1>

    <section class="services-section">
        <h2>@Translate("Our Services")</h2>
        <ul>
            <li>@Translate("Custom Jewelry Design")</li>
            <li>@Translate("Jewelry Repair & Resizing")</li>
            <li>@Translate("Appraisals & Consultations")</li>
        </ul>
    </section>

    <section class="hours-section">
        <h2>@Translate("Store Hours")</h2>
        <table>
            <tr><td>@Translate("Tuesday - Saturday:")</td><td>10:00 AM - 6:00 PM</td></tr>
            <tr><td>@Translate("Sunday:")</td><td>@Translate("Closed")</td></tr>
            <tr><td>@Translate("Monday:")</td><td>@Translate("Closed")</td></tr>
        </table>
    </section>

    <section class="carousel-section">
        <h2>@Translate("Something for Everyone")</h2>
        <div class="carousel js-flickity"
             data-flickity='{ "cellAlign": "left", "contain": true, "autoPlay": 2500, "pauseAutoPlayOnHover": true, "wrapAround": true, "pageDots": false }'>
            <img src="images/braselet.jpeg" alt="Product 1">
            <img src="images/coin1.jpeg" alt="Product 2">
            <img src="images/coin2.jpeg" alt="Product 3">
            <img src="images/shelf1.jpeg" alt="Product 4">
            <img src="images/shelf2.jpeg" alt="Product 5">
        </div>
    </section>

    <section class="social-media">
        <h2>@Translate("Connect With Us")</h2>
        <div class="contact-info">
            <p><i class="bi bi-telephone"></i> (813) 542-5200</p>
            <p><i class="bi bi-envelope"></i> godfather.jewelry@gmail.com</p>
        </div>
        <div class="icons">
            <a href="https://www.tiktok.com/&#64;joyeriaelpadrino" target="_blank" title="TikTok">
                <i class="bi bi-tiktok"></i>
            </a>
            <a href="tel:+13051234567" title="Call Us">
                <i class="fas fa-phone"></i>
            </a>
        </div>
    </section>

    <section class="location-section">
        <h2>@Translate("Visit Us")</h2>
        <p><i class="fas fa-map-marker-alt"></i> 2501 W Busch Blvd, Tampa, FL 33618</p>
        <a href="https://maps.app.goo.gl/vYp2haeQD7pwhM3v5" target="_blank" class="map-link" title="Google Maps">
            <i class="bi bi-geo-alt-fill"></i> @Translate("View on Google Maps")
        </a>
    </section>

    <footer>
        <p>&copy; 2025 Godfather Jewelry Store. @Translate("All rights reserved.")</p>
    </footer>
</div>

@code {
    private bool isSpanish = false;
    private string currentLanguageLabel => isSpanish ? "English" : "Español";

    private void ToggleLanguage()
    {
        isSpanish = !isSpanish;
    }

    private string Translate(string text)
    {
        if (!isSpanish) return text;

        return text switch
        {
            "Where Timeless Elegance Meets Craftsmanship" => "Donde la elegancia sin tiempo se une con la artesanía",
            "Something for Everyone" => "Algo para todos",
            "Custom Jewelry Design" => "Diseño de joyería personalizada",
            "Jewelry Repair & Resizing" => "Reparación y ajuste de joyas",
            "Appraisals & Consultations" => "Tasaciones y consultas",
            "Store Hours" => "Horario de Atención",
            "Tuesday - Saturday:" => "Martes - Sábado:",
            "Sunday:" => "Domingo:",
            "Monday:" => "Lunes:",
            "Closed" => "Cerrado",
            "Our Services" => "Nuestros Servicios",
            "Connect With Us" => "Conéctate con Nosotros",
            "Visit Us" => "Visítenos",
            "View on Google Maps" => "Ver en Google Maps",
            "All rights reserved." => "Todos los derechos reservados.",
            _ => text
        };
    }
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Sansation&display=swap');

    @@keyframes fadeZoomIn {
        0% {
            opacity: 0;
            transform: scale(0.8);
        }

        100% {
            opacity: 1;
            transform: scale(1);
        }
    }

    .fade-in {
        opacity: 0;
        animation: fadeZoomIn 1s ease-out forwards;
    }

    .landing-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        background-color: #111;
        color: #f2e6c9;
        font-family: 'Sansation', sans-serif;
        text-align: center;
    }

    .lang-toggle {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: #f2e6c9;
        color: #111;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
    }

    .logo-mask {
        width: 300px;
        height: 150px;
        max-width: 80%;
        background: url("images/logopng.png") no-repeat center/contain;
    }

    .tagline {
        font-size: 1.5rem;
        margin-bottom: 2rem;
    }

    section {
        margin-bottom: 2rem;
        max-width: 800px;
        width: 100%;
    }

    .services-section ul {
        list-style: none;
        padding: 0;
    }

    .services-section li {
        margin: 0.5rem 0;
    }

    .hours-section table {
        margin: auto;
        border-spacing: 1rem;
    }

    .carousel img {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border-radius: 8px;
        transition: box-shadow 0.3s ease-in-out;
        margin: 5px;
    }

        .carousel img:hover {
            box-shadow: 0 0 15px #d4af37;
        }

    .social-media .icons a {
        margin: 0 1rem;
        color: #f2e6c9;
        font-size: 1.5rem;
        text-decoration: none;
    }

    .contact-info {
        margin-bottom: 1rem;
    }

        .contact-info p {
            margin: 0.25rem 0;
        }

    .map-link {
        display: inline-block;
        padding: 0.5rem 1rem;
        border: 1px solid #f2e6c9;
        border-radius: 5px;
        margin-top: 1rem;
        text-decoration: none;
        color: #f2e6c9;
    }

        .map-link i {
            margin-right: 0.5rem;
        }

    footer {
        margin-top: 3rem;
        font-size: 0.9rem;
        opacity: 0.6;
    }

    @@media (max-width: 600px) {
        .tagline {
            font-size: 1.2rem;
        }

        .carousel img {
            width: 150px;
            height: 150px;
        }
    }
</style>
